{
  "manifest_version": 3,
  "name": "Codeforces Cheater Flagger",
  "version": "1.0",
  "description": "Easily identify cheaters on Codeforces",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Check Codeforces Verdicts"
  },
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/profile/*"],
      "js": ["content.js"]
    }
  ],
    "permissions":[
        "storage"
    ],
    "browser_specific_settings": {
  "gecko": {
    "id": "{c55e8b44-d327-474d-8ef2-f15dfdfb9777}",
    "strict_min_version": "58.0"
  }
}
}

