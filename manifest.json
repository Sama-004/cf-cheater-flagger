{
  "manifest_version": 3,
  "name": "Codeforces Verdict Checker",
  "version": "1.0",
  "description": "Fetch and log WRONG_ANSWER verdicts from Codeforces",
  "permissions": [
    "activeTab",
    "https://codeforces.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Check Codeforces Verdicts"
  },
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/*"],
      "js": ["content.js"]
    }
  ]
}

